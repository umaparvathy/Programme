<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/sunray"
    android:padding="5dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/imageView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imageView7"
        android:src="@drawable/topimage"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_participate"
        android:src="@drawable/newoption1"
        android:gravity="left"
        android:background="@null"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/action_email"
        android:layout_alignStart="@+id/action_email" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_stories"
        android:src="@drawable/newoption2"
        android:gravity="left"
        android:background="@null"
        android:layout_below="@+id/action_participate"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_facebook"
        android:src="@drawable/newoption3"
        android:gravity="left"
        android:background="@null"
        android:layout_below="@+id/action_stories"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_email"
        android:src="@drawable/newoption4"
        android:gravity="left"
        android:background="@null"
        android:layout_below="@+id/action_facebook"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_about"
        android:src="@drawable/newoption5"
        android:gravity="left"
        android:background="@null"
        android:layout_below="@+id/action_email"
        android:layout_centerHorizontal="true" />

</RelativeLayout>