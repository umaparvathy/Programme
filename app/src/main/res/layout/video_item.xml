<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:weightSum="100">
        <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/video"
        android:layout_weight="75"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <ImageView
                android:id="@+id/makeFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite"/>

            <TextView android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/video_thumbnail"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:text="test"/>

        </LinearLayout>
    </LinearLayout>

    <TextView android:id="@+id/video_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/video_title"
        android:textSize="25sp"
        android:textStyle="italic"
        android:text="test description kjhsdfkjh skjhsdkjfhsdf  kjshdfkjshdf  kjsdhfksjdfh lsdhfsdhf kjshdfkjshdf  ksjdhfkjsdfh sdkfskdjfh kjdfhskjdfh kjshdfkj"
        android:layout_weight="80"/>


</LinearLayout>