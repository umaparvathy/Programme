<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="75dp"
    tools:context=".MainActivity"
    android:id="@+id/layoutHolder"
    android:weightSum="100"
    android:background="@color/bgColor">

    <LinearLayout android:orientation="vertical"
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/layout1"
        android:scaleType="fitXY"
        android:weightSum="100">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:id="@+id/imageView"
            android:src="@drawable/contest_modified"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:text="Participate"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/layout2"
        android:scaleType="fitXY"
        android:weightSum="100">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:id="@+id/imageView2"
            android:src="@drawable/videos_modified"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="Listen"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/layout3" android:scaleType="fitXY"
        android:weightSum="100">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:id="@+id/imageView3"
            android:src="@drawable/facebook_modified"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="Like"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/layout4"
        android:scaleType="fitXY"
        android:weightSum="100">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:id="@+id/imageView4"
            android:src="@drawable/email_modified"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="Email"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>